.row.justify-content-center
  .col-4
    %h2.text-center Регистрация
    = form_for(@model, url: site_bot_path, as: :site_bot, html: {autocomplete: 'off'}) do |f|
      .form-group
        = f.label :easy_number, 'EasyPay логин(телефон) в формате 380XXXXXXXXX'
        = f.text_field :easy_number, autofocus: true, class: "form-control", required: true
        = show_errors(:easy_number)
      %br/
      .form-group
        = f.label :easy_password, "EasyPay пароль"
        = f.password_field :easy_password, class: "form-control", required: true
        = show_errors(:easy_password)
      %br/
      .form-group
        = f.label :tg_token, "Telegram бот-токен"
        = f.text_field :tg_token, class: "form-control", required: true
        = show_errors(:tg_token)
      .form-group
        = f.submit "Создать", class: "btn btn-primary"
